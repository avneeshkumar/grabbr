<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbackblue">
    <RelativeLayout 
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/white">
        <ImageView 
            android:id="@+id/previous"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/previous"/>
        <com.grabbr.grabbrapp.customviews.MyTextView 
            android:layout_toRightOf="@+id/previous"
            android:layout_toLeftOf="@+id/done_btn"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Sign Up"
            android:textColor="@color/apptextlightgrey"
            android:textSize="22sp"/>
        <com.grabbr.grabbrapp.customviews.MyTextView 
            android:id="@+id/done_btn"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center"
            android:text="Done"
            android:textColor="@color/appbackblue"
            android:textSize="22sp"/>
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/profile_pic"
        android:layout_below="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout 
            android:layout_centerInParent="true"
            android:layout_margin="64dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id = "@+id/add_image1"
            android:background="@drawable/grey_circle_stroke">
	        <LinearLayout 
	            android:layout_centerInParent="true"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:orientation="vertical">
	            <ImageView 
	                android:id="@+id/plus_img"
	                android:layout_width="32dp"
	                android:layout_height="32dp"
	                android:background="@drawable/black_plus"/>
	            <com.grabbr.grabbrapp.customviews.MyTextView
	               android:id="@+id/addimg_tv" 
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_marginTop="8dp"
		           android:text="Photo"
		           android:textColor="@android:color/black"
		           android:textSize="18sp"/>
	        </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/user_name"
        android:layout_below="@+id/profile_pic"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <ImageView 
            android:id="@+id/user_icon"
            android:layout_centerVertical="true"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/person"/>
        <EditText 
            android:id="@+id/signup_username_edittext"
            android:layout_toRightOf="@+id/user_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="0dp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical|left"
            android:hint="Full Name"
            android:textColorHint="@color/lighttextblue"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:singleLine="true"
		    android:lines="1"
		    android:maxLines="1"
		    android:scrollHorizontally="true"
		    android:ellipsize="end"/>
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/user_email"
        android:layout_below="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <ImageView 
            android:id="@+id/email_icon"
            android:layout_centerVertical="true"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/email"/>
        <EditText 
            android:id="@+id/signup_email_edittext"
            android:layout_toRightOf="@+id/email_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="0dp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical|left"
            android:hint="Email"
            android:textColorHint="@color/lighttextblue"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:singleLine="true"
		    android:lines="1"
		    android:maxLines="1"
		    android:scrollHorizontally="true"
		    android:ellipsize="end"/>
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/user_password"
        android:layout_below="@+id/user_email"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <ImageView 
            android:id="@+id/pass_icon"
            android:layout_centerVertical="true"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/lock"/>
        <EditText 
            android:id="@+id/signup_password_edittext"
            android:layout_toRightOf="@+id/pass_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="0dp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical|left"
            android:hint="Password"
            android:textColor="@android:color/white"
            android:textColorHint="@color/lighttextblue"
            android:textSize="22sp"
            android:singleLine="true"
		    android:lines="1"
		    android:maxLines="1"
		    android:scrollHorizontally="true"
		    android:ellipsize="end"/>
    </RelativeLayout>
</RelativeLayout>
</ScrollView>