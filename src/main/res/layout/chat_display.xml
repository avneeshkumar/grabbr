<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/createclasslayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:background="@android:color/white">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <!-- main tabs -->
    
   
    
    <!-- replace the below linearlayout with a listview -->
  	<LinearLayout 
  	    android:layout_width="match_parent"
  	    android:layout_height="wrap_content"
  	    android:background="@color/backgroundgrey"
  	    android:orientation="vertical">
        
  	    <!-- inbox 1 -->
  	    <RelativeLayout 
  	        android:layout_width="match_parent"
			android:layout_height="128dp"
			android:background="@android:color/white"
			android:id="@+id/relativelayout"
			android:layout_marginBottom="2dp">	
  	        <com.grabbr.grabbrapp.customviews.RoundedImageView
	            android:id="@+id/profile_pic"
	            android:layout_width="96dp"
	            android:layout_height="96dp"
	            android:layout_margin="16dp"
	            android:background="@drawable/me"
	            android:src="@drawable/circle_mask"
	            android:scaleType="fitCenter"
	            android:layout_alignParentLeft="true"/>
  	        <com.grabbr.grabbrapp.customviews.MyTextView 
  	            android:id="@+id/time_stamp"
  	            android:layout_marginTop="12dp"
  	            android:layout_marginRight="16dp"
  	            android:layout_width="wrap_content"
  	            android:layout_height="wrap_content"
  	            android:text="41 minutes ago"
  	            android:textSize="14sp"
  	            android:textColor="@color/apptextlightgrey"
  	            android:layout_alignParentRight="true"/>

  	        <com.grabbr.grabbrapp.customviews.MyTextView
  	            android:id="@+id/buddy_name"
  	            android:layout_width="wrap_content"
  	            android:layout_height="wrap_content"
  	            android:layout_alignRight="@+id/time_stamp"
  	            android:layout_centerVertical="true"
  	            android:text="Avneesh Kumar"
  	            android:textColor="@android:color/black"
  	            android:textSize="24sp"
  	            android:textStyle="normal" />

  	    </RelativeLayout>
  	    
  	    
  	    
  	</LinearLayout>
</LinearLayout>
</ScrollView>