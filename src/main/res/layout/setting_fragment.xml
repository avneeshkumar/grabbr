	         <FrameLayout 
	             android:layout_width="match_parent"
	             android:layout_height="wrap_content">
		         <TextView 
		             android:id="@+id/reportproblem"
		             android:layout_marginTop="0.5dp"
		             android:layout_width="match_parent"
		             android:layout_height="64dp"
		             android:paddingRight="32dp"
		             android:gravity="right|center_vertical"
		             android:text="Report a Problem"
		             android:textColor="@color/appblue"
		             android:textSize="18sp"
		             android:background="@android:color/white"
		             android:visibility="visible"/>
		         <LinearLayout 
	                  android:layout_width="match_parent"
	                  android:layout_height="wrap_content"
	                  android:orientation="vertical"
	                  android:id="@+id/reportproblem_ll"
	                  android:visibility="gone">
	                  	<TextView 
				             android:layout_width="match_parent"
				             android:layout_height="64dp"
				             android:paddingRight="32dp"
				             android:gravity="right|center_vertical"
				             android:text="Report a Problem"
				             android:textColor="@android:color/white"
				             android:textSize="18sp"
				             android:background="@color/appblue"/>
			         <RelativeLayout 
			             android:layout_width="match_parent"
			             android:layout_height="256dp"
			             android:background="@color/backgroundgrey2"
			             android:padding="32dp">
		                  	<EditText 
		                  	    android:layout_centerHorizontal="true"
		                  	    android:layout_above="@+id/send_btn"
		                  	    android:layout_marginBottom="8dp"
					            android:layout_width="fill_parent"
					            android:layout_height="fill_parent"
					            android:padding="8dp"
					            android:gravity="left|top"
					            android:hint="Write Your Problem..."
					            android:textSize="14sp"
					            android:textColor="@color/apptextgrey"
					            android:textColorHint="@color/appblue"
					            android:background="@drawable/black_border"/>
			             	<com.grabbr.grabbrapp.customviews.MyTextView
			             	    android:id="@+id/send_btn"
			             	    android:layout_alignParentRight="true"
			             	    android:layout_alignParentBottom="true"
					            android:layout_width="72dp"
					            android:layout_height="42dp"
					            android:text="Send"
					            android:gravity="center"
					            android:textSize="18sp"
					            android:textStyle="normal"
					            android:textColor="@color/appblue"
					            android:background="@drawable/blue_button_border"
					            android:layout_centerVertical="true"/>
			         </RelativeLayout>
			         </LinearLayout>
		     </FrameLayout>
	         <TextView
	             android:id="@+id/signout" 
	             android:layout_marginTop="0.5dp"
	             android:layout_width="match_parent"
	             android:layout_height="64dp"
	             android:paddingRight="32dp"
	             android:gravity="right|center_vertical"
	             android:text="Sign Out"
	             android:textColor="@color/appblue"
	             android:textSize="18sp"
	             android:background="@android:color/white"/>
